<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:src="@drawable/ic_registration"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <TextView
          android:layout_width="50dp"
          android:layout_marginLeft="10dp"
          android:layout_height="wrap_content"
          android:textSize="12sp"
          android:textStyle="bold"
          android:textColor="@color/black"
          android:text="Email:"/>

        <EditText
            android:id="@+id/edit_email"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="inscrivez votre Email"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:textColor="@color/black"
            android:text="MDP:"/>

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="Inscrivez votre mot de passe"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Nom:"/>

        <EditText
            android:id="@+id/edit_user_name"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="Inscrivez votre nom"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Photo:"/>

        <Button
            android:id="@+id/btn_upload_image"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:textSize="7sp"
            android:text="Charger"/>

        <ImageView
            android:id="@+id/edit_load_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"/>


    </LinearLayout>
    <Button
        android:id="@+id/btn_save_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enregistrer"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/black"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>


</LinearLayout>